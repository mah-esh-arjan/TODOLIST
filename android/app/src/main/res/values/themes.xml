<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Launcher" parent="DefaultTheme">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:splitMotionEvents">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">#F9D798</item>
        <item name="colorPrimaryDark">#704020</item>
        <item name="colorPrimaryDarkRipple">#33CAB47C</item>
        <item name="colorAccent">#FF9000</item>
        <item name="colorSecondary">#CAB47C</item>
        <item name="colorFrame">#CAB47C</item>
        <item name="colorFrameBackground">#FFEBB8</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">?attr/colorPrimaryDark</item>
    </style>

    <style name="IronTheme" parent="DefaultTheme">
