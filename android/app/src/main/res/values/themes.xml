        <item name="colorFrame">#923300</item>
        <item name="colorFrameBackground">#DAAE8D</item>
    </style>

    <style name="WoodyTheme" parent="DefaultTheme">
        <item name="colorPrimary">#EBD5C1</item>
        <item name="colorPrimaryDark">#461F01</item>
        <item name="colorPrimaryDarkRipple">#339B7963</item>
        <item name="colorAccent">#5BBD26</item>
