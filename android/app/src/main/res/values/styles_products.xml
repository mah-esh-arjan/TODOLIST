<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProductBorderLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/square</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
    </style>

    <style name="ProductMainLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>