<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:alpha="0.8"
    android:id="@+id/border_layout"
    android:background="@color/colorPrimaryDarkDefaultTheme"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/small_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        android:background="@color/colorPrimaryDefaultTheme">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list"
            android:divider="@null"
            android:visibility="gone"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:ellipsize="end"
                android:textSize="16sp"
                android:id="@+id/status"
                android:textColor="@color/colorPrimaryDarkDefaultTheme"
                android:text="@string/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:visibility="visible"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="16sp"
                android:id="@+id/button_unlock"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDefaultTheme"
                android:background="@color/colorPrimaryDarkDefaultTheme"
                android:layout_gravity="bottom"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_margin="@dimen/margin"
                android:text="@string/unlock"/>

        </LinearLayout>


    </FrameLayout>

</FrameLayout>